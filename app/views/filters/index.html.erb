<p id="notice"><%= notice %></p>

<h1>Filters</h1>

<table>
  <thead>
    <tr>
      <th>Area</th>
      <th>Status</th>
      <th>Min price</th>
      <th>Max price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @filters.each do |filter| %>
      <tr>
        <td><%= filter.area %></td>
        <td><%= filter.status %></td>
        <td><%= filter.min_price %></td>
        <td><%= filter.max_price %></td>
        <td><%= link_to 'Show', filter %></td>
        <td><%= link_to 'Edit', edit_filter_path(filter) %></td>
        <td><%= link_to 'Destroy', filter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Filter', new_filter_path %>
