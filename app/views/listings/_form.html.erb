  <header><h2>Gallery</h2></header>
  <div class="centers">
  <div class="form-group">
           <div  id="filediv">                             
    <%= form.fields_for :post_attachments do |p| %>
     <div class="form-group">
       <%= p.label :image %><br>
       <%= p.file_field :img, :multiple => true, name:"listing_images[img][]",id: 'file' %>
       <br>
        <input type="button" id="add_more" class="btn btn-default small" value="Add More" />
       
     </div> 
      </div>
       <%= form.submit "Submit", class: 'btn pull-right btn-default' %>
                               <% end %>
   <% end %>                                          
 </div> 
 </div>
